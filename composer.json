{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "nodus-it/laravel-env-manager",
    "type": "project",
    "description": "Environment variable manager for Laravel applications with a Filament-based UI.",
    "keywords": [
        "laravel",
        "framework",
        "environment",
        "env",
        "configuration",
        "filament",
        "env-manager",
        "nodus-it"
    ],
    "license": "MIT",
    "homepage": "https://nodus-it.de",
    "authors": [
        {
            "name": "Bastian Schur (Nodus IT)",
            "email": "b.schur@nodus-it.de",
            "role": "Lead Developer & Maintainer",
            "homepage": "https://www.nodus-it.de"
        },
        {
            "name": "Dominique Heinelt (naNO Consult GbR)",
            "email": "dominique.heinelt@nano-consult.de",
            "role": "Developer & Maintainer",
            "homepage": "https://www.nano-consult.de"
        },
        {
            "name": "Nodus IT",
            "homepage": "https://nodus-it.de",
            "role": "Vendor"
        }
    ],
    "support": {
        "issues": "https://github.com/nodus-it/laravel-env-manager/issues",
        "source": "https://github.com/nodus-it/laravel-env-manager"
    },
    "require": {
        "php": "^8.3",
        "bezhansalleh/filament-language-switch": "^4.0",
        "dutchcodingcompany/filament-developer-logins": "^2.0",
        "filament/filament": "v4.5.2",
        "jeffgreco13/filament-breezy": "^v3.0.3",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "spatie/laravel-data": "^4.18",
        "ext-pdo": "*"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^4.0",
        "fakerphp/faker": "^1.23",
        "laravel/boost": "^2.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.26",
        "laravel/telescope": "^5.15",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpstan/phpstan": "^2.1",
        "pestphp/pest": "^v4.1.6",
        "pestphp/pest-plugin-laravel": "^v4.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "pint": "./vendor/bin/pint --parallel",
        "phpstan": "./vendor/bin/phpstan",
        "pest": "./vendor/bin/pest",
        "test": [
            "@pint",
            "@phpstan",
            "@pest"
        ],
        "setup": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate:fresh --force",
            "@php artisan filament:user --name=Test --email=admin@admin --password=admin"
        ],
        "setup:test": [
            "@setup",
            "@php artisan db:seed TestSeeder"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan boost:update"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
